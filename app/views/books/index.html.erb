<% @books.each do |books_path| %>
<div>
  <%= link_to book_path(book.id) do %>
    <%= image_tag book.get_image %>
  <% end %>

  <p><%= image_tag book.user.get_profile_image(100,100) %></p>

  <h2>Books</h2>
  <%= image_tag book.get_image %>
  <p><%= image_tag 'no_image' %></p>
  <p>Title：<%= book.title %></p>
  <p>Option：<%= book.option %></p>
  <% if @book.user == current_user %>
    <%= link_to "Destroy", book_path(@book), method: :delete %>
  <% end %>
</div>
<% end %>