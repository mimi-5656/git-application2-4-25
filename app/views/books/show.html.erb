<div>
  <%= image_tag @book.get_image %>
  <p>Title：<%= @book.title %></p>
  <p>Option：<%= @book.option %></p>
  <p><%= image_tag 'sample-author1.jpg' %></p>
  <p><%= image_tag @book.user.get_profile_image(100,100) %></p>
  <p>name：<%= @book.user.name %></p>
  <p>投稿日：<%= @book.created_at.strftime('%Y/%m/%d') %></p>
  <% if @book.user == current_user %>
    <%= link_to "Destroy", book_path(@book), method: :delete %>
  <% end %>
</div>

