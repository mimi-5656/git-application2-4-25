  <div class="col-md-3">
   <% if flash[:notice] %>
    <div class="flash">
         <%= flash[:notice] %>
    </div>
   <% end %>

<div class="container">
  <div class="row">

  <%= render 'books/list', user: @user, books: @book %>
  </div>

   <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">

     <thead>
      <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
      </tr>
     </thead>

     <tbody>
       <% @books.each do |book| %>
       <tr>
       <td><%= book.title %></td>
       <td><%= book.body %></td>
       </tr>
       <% end %>
     </tbody>
    </table>
   </div>

 </div>
</div>

