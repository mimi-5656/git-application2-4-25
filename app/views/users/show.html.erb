<div class="container">

 <p><% if flash[:notice] %>
   <div class="flash">
     <%= flash[:notice] %>
   </div>
 <% end %></p>

  <div class="row">
   <div class="col-md-3">
   <%= render 'books/list', user: @user, books: @book %>
   </div>

   <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">

     <thead>
      <tr>
      <th></th>
      <th>Title</th>
      <th>Option</th>
      <th colspan="3"></th>
      </tr>
     </thead>

     <tbody>
       <% @books.each do |book| %>
       <tr>
       <td>
        <%= link_to user_path(book.user) do %>
        <%= image_tag book.user.get_profile_image(80,80) %>
        <% end %>
       </td>
       <td>
        <%= link_to book_path(book) do %>
        <%= book.title %>
        <% end %>
       </td>
       <td><%= book.body %></td>
       </tr>
       <% end %>
     </tbody>
    </table>
   </div>

 </div>
</div>

