<div class="container">

 <% if @user.errors.any? %>
       <div id="error_explanation">
        <h2><%= @user.errors.count %> errors prohibited this book from being saved:</h2>
        <ul>
        <% @user.errors.full_messages.each do |message| %>
         <li><%= message %></li>
        <% end %>
       </ul>
      </div>
      <% end %>


  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h2>User info</h2>


      <%= form_with model: @user do |f| %>
       <div class="form-group">
        <label for="user_name">Name</label>
        <%= f.text_field :name, class:'form-control name' %>
       </div>
       <div class="form-group">
        <label for="user_image">Image</label>
        <%= f.file_field :profile_image, class:'form-control-file', accept:"image/*" %>
       </div>
       <div class="form-group">
        <label for="user_introduction">Introduction</label>
        <%= f.text_field :introduction, class:"form-control introduction"%>
       </div>
       <div class="form-group">
        <%= f.submit "Update User", class:"btn btn-secondary" %>
       </div>
      <% end %>
    </div>
  </div>
</div>